<div class="container mt-3">
  <h2>YELP - Create a new restaurant!</h2>

  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: ['French', 'Belgian', 'Chinese', 'Japanese', 'Italian'] %>
    <%= f.input :phone_number %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
  <div class="mt-4">
    <%= link_to '⬅️ Go back to all restaurants', restaurants_path, class: 'text-decoration-none' %>
  </div>
</div>
